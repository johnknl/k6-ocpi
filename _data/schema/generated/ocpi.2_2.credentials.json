{
  "$ref": "#/definitions/ocpi.2_2.credentials",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ocpi.2_2.credentials": {
      "additionalProperties": false,
      "properties": {
        "roles": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "business_details": {
                "additionalProperties": false,
                "properties": {
                  "logo": {
                    "anyOf": [
                      {
                        "additionalProperties": false,
                        "properties": {
                          "category": {
                            "enum": [
                              "CHARGER",
                              "ENTRANCE",
                              "LOCATION",
                              "NETWORK",
                              "OPERATOR",
                              "OTHER",
                              "OWNER"
                            ],
                            "type": "string"
                          },
                          "height": {
                            "anyOf": [
                              {
                                "maximum": 99999,
                                "type": "integer"
                              },
                              {
                                "type": "null"
                              }
                            ]
                          },
                          "thumbnail": {
                            "anyOf": [
                              {
                                "format": "uri",
                                "type": "string"
                              },
                              {
                                "type": "null"
                              }
                            ]
                          },
                          "type": {
                            "maxLength": 4,
                            "type": "string"
                          },
                          "url": {
                            "format": "uri",
                            "type": "string"
                          },
                          "width": {
                            "anyOf": [
                              {
                                "maximum": 99999,
                                "type": "integer"
                              },
                              {
                                "type": "null"
                              }
                            ]
                          }
                        },
                        "required": [
                          "url",
                          "category",
                          "type"
                        ],
                        "type": "object"
                      },
                      {
                        "type": "null"
                      }
                    ]
                  },
                  "name": {
                    "maxLength": 100,
                    "type": "string"
                  },
                  "website": {
                    "anyOf": [
                      {
                        "format": "uri",
                        "type": "string"
                      },
                      {
                        "type": "null"
                      }
                    ]
                  }
                },
                "required": [
                  "name"
                ],
                "type": "object"
              },
              "country_code": {
                "maxLength": 2,
                "minLength": 2,
                "type": "string"
              },
              "party_id": {
                "maxLength": 3,
                "minLength": 3,
                "type": "string"
              },
              "role": {
                "enum": [
                  "CPO",
                  "EMSP",
                  "HUB",
                  "NAP",
                  "NSP",
                  "OTHER",
                  "SCSP"
                ],
                "type": "string"
              }
            },
            "required": [
              "role",
              "business_details",
              "party_id",
              "country_code"
            ],
            "type": "object"
          },
          "minItems": 1,
          "type": "array"
        },
        "token": {
          "maxLength": 64,
          "type": "string"
        },
        "url": {
          "format": "uri",
          "type": "string"
        }
      },
      "required": [
        "token",
        "url",
        "roles"
      ],
      "type": "object"
    }
  }
}
